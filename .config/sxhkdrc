	~/bin/toggle-touchpad.sh

# Toggle Automatic Screens
super + F3
	~/bin/caffeine.sh

# Set CPU frequency
super + F4
	~/bin/cpupower

# CapLock Notification
@Caps_Lock
	~/bin/caplock.sh 

# spotify notify

XF86AudioPlay
        dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

super + shift + {F12,F10}
        mpc -q {next,prev}

XF86AudioPrev
        dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

super + shift + F11
        mpc -q toggle

XF86AudioNext
        dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

# Screenshots

super + @Print
  ~/bin/scr 

# custom screenshot script: copies it to ~/shots/ and X clipboard
@Print
        xfce4-screenshooter

# deletes last screenshot taken
shift + Print
        rm ~/Imagens/Screenshots/$(ls ~/Pictures/Screenshots -c | head -n 1); \
	notify-send "Delete screenshots saved"

ctrl + Print
	scrot -d 2 -u --quality 100 '%Y-%m-%d_$wx$h.png' -e 'mv $f ~/Imagens/Screenshots/'; \
	notify-send "Screenshots saved"

# Lock Desktop

XF86ScreenSaver
 	/home/xmiah/bin/lock.sh -l dimblur; \
	notify-send "Locked Desktop"
