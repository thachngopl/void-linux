# wm independent hotkeys

# terminal emulator

super + Return
  urxvtc

super + shift + Return
  xterm

super + ctrl + Return
	urxvtc -e "ncmpcpp"

super + shift + w
	urxvtc -e "htop"

# program launcher

super + @space
  rofi -show drun -hide-scrollbar 
#	rofi -show drun -modi drun -hide-scrollbar

super + e
        thunar

super + x
        skypeforlinux

super + a
	spotify

super + w
	firefox

super + r
	jetbrains-rubymine

super + v
	vmware

super + n
    pavucontrol

# toogle polybar
super + d
	killall -s 9 polybar && sleep 0 && bspc config top_padding 0 && notify-send "î‡§ HIDE BAR LOADING -:D "

super + shift + d
	~/bin/la2nch.sh

# ~/.config/polybar/autohide

# sleep button
XF86Sleep
				sudo zzz
# brightness
XF86MonBrightnessUp
        xbacklight -inc 5
XF86MonBrightnessDown
        xbacklight -dec 5

# multimedia keys
XF86AudioRaiseVolume
        pulseaudio-ctl up 4
        #amixer sset PCM 5%+

XF86AudioLowerVolume
        pulseaudio-ctl down 4
        #amixer sset PCM 5%-

XF86AudioMute
        pulseaudio-ctl mute
        #amixer -q set Master toggle

XF86AudioMicMute
        pulseaudio-ctl mute-input

XF86Launch1
        xset dpms force off

